{
  "presets": ["es2015", "react"],
  "plugins": [
    ["react-css-modules", {
      "generateScopedName": "[local]--[hash:base64:5]",
      "filetypes": {
        ".scss": {
          "syntax": "postcss-scss"
        }
      }
    }],
    "transform-decorators-legacy",
    "transform-class-properties",
    "syntax-dynamic-import",
    [
      "module-resolver", {
        "root": ["./"],
        "alias": {
          "@stores": "./src/stores",
          "@pages": "./src/pages",
          "@components": "./src/components"
        }
      }
    ]
  ]
}